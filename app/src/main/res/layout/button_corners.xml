<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/corners_layout"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All corners radii(dp):"
            android:textColor="#e91e63"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_all_corners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="number"
            android:textColor="#e91e63" />
    </LinearLayout>

    <Switch
        android:id="@+id/switch_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use individual properties"
        android:textColor="#e91e63"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <TableRow>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Top left (dp): "
                   android:textColor="#e91e63"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/et_top_left"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:ems="3"
                   android:inputType="number"
                   android:textColor="#e91e63"
                   android:textStyle="bold" />
           </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top right (dp): "
                    android:textColor="#e91e63"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_top_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:textColor="#e91e63"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bottom left (dp): "
                    android:textColor="#e91e63"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_bottom_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:textColor="#e91e63"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bottom right (dp): "
                    android:textColor="#e91e63"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_bottom_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:textColor="#e91e63"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>