<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/size_layout"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUTTON HEIGHT (dp): "
            android:textColor="#e91e63"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_btn_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="number"
            android:textColor="#e91e63"
            android:textStyle="bold" />

    </LinearLayout>

    <Switch
        android:id="@+id/switch_height_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t\tmatch parent"
        android:textColor="#e91e63"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch_height_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t\twrap content"
        android:textColor="#e91e63"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUTTON WIDTH (dp): "
            android:textColor="#e91e63"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_btn_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="number"
            android:textColor="#e91e63"
            android:textStyle="bold" />

    </LinearLayout>

    <Switch
        android:id="@+id/switch_width_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t\tmatch parent"
        android:textColor="#e91e63"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch_width_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\t\twrap content"
        android:textColor="#e91e63"
        android:textStyle="bold" />

</LinearLayout>