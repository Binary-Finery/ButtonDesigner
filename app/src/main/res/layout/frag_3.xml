<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/textColor"
            android:text="Width" />

        <Switch
            android:id="@+id/switch_size_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="16dp"
            android:text="Wrap Content" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar_size_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:max="320" />

        <TextView
            android:id="@+id/tv_size_width_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="@string/dp"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="24dp"
            android:textColor="@color/textColor"
            android:text="Height" />

        <Switch
            android:id="@+id/switch_size_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="16dp"
            android:text="Wrap Content" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar_size_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:max="320" />

        <TextView
            android:id="@+id/tv_size_height_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="@string/dp"
            android:textColor="@color/textColor" />

    </LinearLayout>

</ScrollView>